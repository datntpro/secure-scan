# =============================================================================
# SecureScan.vn Environment Configuration
# =============================================================================

# Application
APP_ENV=development
APP_DEBUG=true
APP_SECRET_KEY=your-super-secret-key-change-in-production
APP_URL=http://localhost:3000
API_URL=http://localhost:8000

# Database
DATABASE_URL=postgresql://securescan:password@localhost:5432/securescan_dev
DATABASE_POOL_SIZE=20
DATABASE_ECHO=false

# Redis
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# JWT Authentication
JWT_SECRET_KEY=your-jwt-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=1440
REFRESH_TOKEN_EXPIRE_DAYS=7

# Email Configuration
SENDGRID_API_KEY=your-sendgrid-api-key
EMAIL_FROM=noreply@securescan.vn
EMAIL_FROM_NAME=SecureScan.vn

# Object Storage (Cloudflare R2 / S3 Compatible)
S3_ENDPOINT=https://your-account-id.r2.cloudflarestorage.com
S3_ACCESS_KEY=your-r2-access-key
S3_SECRET_KEY=your-r2-secret-key
S3_BUCKET=securescan-reports
S3_REGION=auto

# Scan Engines
ZAP_API_URL=http://localhost:8080
ZAP_API_KEY=your-zap-api-key
NUCLEI_TEMPLATES_PATH=/opt/nuclei-templates
NUCLEI_BINARY_PATH=/usr/local/bin/nuclei

# External APIs
SSL_LABS_API_URL=https://api.ssllabs.com/api/v3
WAPPALYZER_API_KEY=your-wappalyzer-key

# Payment (Stripe)
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# Monitoring
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
LOG_LEVEL=INFO

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
SCAN_RATE_LIMIT_PER_HOUR=10

# Security
ALLOWED_HOSTS=localhost,127.0.0.1,securescan.vn
CORS_ORIGINS=http://localhost:3000,https://securescan.vn

# Scan Configuration
MAX_CONCURRENT_SCANS=50
SCAN_TIMEOUT_MINUTES=60
MAX_URLS_PER_SCAN=1000
DEFAULT_SCAN_DEPTH=5

# Vietnamese Localization
DEFAULT_LANGUAGE=vi
TIMEZONE=Asia/Ho_Chi_Minh

# Feature Flags
ENABLE_SCHEDULED_SCANS=true
ENABLE_API_ACCESS=true
ENABLE_WHITE_LABEL_REPORTS=false
ENABLE_AUTHENTICATED_SCANNING=false

# Development Only
ENABLE_DEBUG_TOOLBAR=true
ENABLE_PROFILING=false
MOCK_EXTERNAL_APIS=false